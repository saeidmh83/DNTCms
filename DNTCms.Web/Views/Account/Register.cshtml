
@using CaptchaMvc.HtmlHelpers
@using DNTCms.Common.HtmlHelpers
@model DNTCms.ViewModel.Account.RegisterViewModel
@{

}
<div class="row">

    @using (Html.BeginForm(MVC.Account.ActionNames.Register, MVC.Account.Name, FormMethod.Post,
                new { id = "registerForm", area = "", @class = "form-horizontal", role = "form", autocomplete = "off" }))
    {
        @Html.AntiForgeryToken()
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Html.HelpAlert(Url.Content("~/Content/Images/lightbulb.png"),
                    "کاربر گرامی بعد از ثبت نام در سیستم  خواهید توانست به دوستان یا آشنایان خود که در ای سیستم عضو هستند ، دعوت نامه بفرستید.",
                    "دقت کنید شماره همراه شما یا ایمیلی که وارد میکنید ، به عنوان نام کاربری شما در نظر گرفته خواهد شد")
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.NoAutoCompleteTextBoxForLtr(m => m.Email)
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.NameForShow, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.NoAutoCompleteTextBoxFor(m => m.NameForShow)
                            @Html.ValidationMessageFor(m => m.NameForShow, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.FormControlPasswordFor(m => m.Password)
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.FormControlPasswordFor(m => m.ConfirmPassword)
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.MathCaptcha(MVC.Shared.Views._CaptchaPartial)
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-md-12">
                            <button type="button" autocomplete="off" onclick="AjaxForm.CustomSubmit(this, 'registerForm')" data-loading-text="در حال ارسال اطلاعات" class="btn btn-success btn-block">
                                تأیید اطلاعات برای تکمیل عضویت
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


